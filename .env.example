# General Configuration
NODE_ENV=development
PORT=3001
SERVICE_NAME=product-service
SERVICE_DESCRIPTION=Product Management and Search Service

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password123@localhost:27017/product_service?authSource=admin

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT Authentication
JWT_SECRET=your_jwt_secret_here
JWT_PRODUCT_SERVICE_KEY=product_service_specific_jwt_key

# Service URLs
USER_SERVICE_URL=http://localhost:3000
ORDER_SERVICE_URL=http://localhost:3002
PAYMENT_SERVICE_URL=http://localhost:3003
SERVICE_REGISTRY_URL=http://localhost:8500

# API Tokens
SERVICE_TOKEN=your_service_token

# Swagger Documentation
SWAGGER_ENABLED=true

# Admin Registration
ADMIN_SECRET_KEY=your_admin_secret_key_here

# Redis Configuration
REDIS_TTL=3600 